<h2><%= @task.title %></h2>
<h1><%= @task.details %></h1>

<ul>
<li><%= link_to 'Back to list', tasks_path %></li>

<li><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?"} %></li>

<li><%= link_to"update this task", edit_task_path(@task) %></li>
</ul>
